# Variables d'environnement pour NoteCibolt Backend

# Configuration de la base de données
DATABASE_URL="postgresql://username:password@localhost:5432/notecibolt_db"

# Configuration JWT
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-key-here"
JWT_REFRESH_EXPIRES_IN="7d"

# Configuration du serveur
PORT=3001
NODE_ENV="development"
API_VERSION="v1"

# Configuration CORS
FRONTEND_URL="http://localhost:5173"
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# Configuration email (Nodemailer)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="NoteCibolt <noreply@notecibolt.com>"

# Configuration de stockage de fichiers
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# Configuration Redis (pour les sessions et cache)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Configuration AWS S3 (optionnel)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="eu-west-1"
AWS_S3_BUCKET="notecibolt-files"

# Configuration de sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Configuration de logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# Configuration WebSocket
SOCKET_PORT=3002

# Configuration de l'école
SCHOOL_NAME="École NoteCibolt"
SCHOOL_EMAIL="contact@notecibolt.com"
SCHOOL_PHONE="+33 1 23 45 67 89"
SCHOOL_ADDRESS="123 Rue de l'Éducation, 75001 Paris"

# Configuration académique
ACADEMIC_YEAR="2024-2025"
CURRENT_SEMESTER="S1"

# Clés API externes
PAYMENT_GATEWAY_KEY=""
SMS_PROVIDER_KEY=""
VIDEO_CONFERENCE_API_KEY=""
